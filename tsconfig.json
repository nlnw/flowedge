{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "utils/**/*.ts", "utils/**/*.js"],
  "exclude": ["node_modules"]
}
